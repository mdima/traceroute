@{
ViewData["Title"] = "Visual Trace Route";
}
<div class="row m-0 p-0 fullHeight">
    <div class="col-12 col-md-8 m-0 p-0 mobile-50">
        <div id="map" class="tr-map"></div>
    </div>
    <div class="col-12 col-md-4 m-0 p-0 mobile-max-50">
        <h5 class="bg-secondary text-white ps-3 p-1">Route details</h5>
        <table class="table table-striped table-sm m-2">
            <thead class="thead-dark">
                <tr>
                    <th>#</th>
                    <th>IP</th>
                    <th>Trip time</th>
                    <th>Location</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="hop in vm.HostList track by $index">
                    <td>{{$index + 1}}</td>
                    <td>{{hop.hopAddress}}</td>
                    <td class="text-end">{{hop.tripTime.toFixed(3)}} ms</td>
                    <td ng-show="hop.details.isp == null" class="small">
                        <div class="spinner-border spinner-border-sm" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </td>
                    <td ng-show="hop.details.isp != null" class="small">
                        {{ hop.details.country }} - {{ hop.details.city }}
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>