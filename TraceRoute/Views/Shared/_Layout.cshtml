<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TraceRoute</title>
    <link rel="stylesheet" href="~/lib/twitter-bootstrap/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
</head>
<body ng-app="traceRouteApp" ng-controller="traceRouteController as vm">
    <nav class="navbar navbar-dark bg-dark navbar-fixed-top">
        <a class="navbar-brand ms-3" href="">TraceRoute</a>
        <div class="justify-content-end" >
            <form class="form-inline me-3" role="search" ng-submit="vm.TraceRoute()">
                <div class="input-group">
                    <input type="text" ng-model="vm.Hostname" class="form-control" placeholder="Perform Trace Route">
                    <span class="input-group-append">
                        <button ng-click="vm.TraceRoute()" class="btn btn-secondary" type="button">
                            <i class="fa-solid fa-magnifying-glass"></i>
                        </button>
                        <a class="btn btn-secondary justify-content-end" data-bs-toggle="offcanvas" href="#offcanvas" role="button" aria-controls="offcanvas">
                            ...
                        </a>
                    </span>
                </div>
            </form>
        </div>
    </nav>
    <main role="main" class="container-fluid">
        @RenderBody()
    </main>
    <footer class="footer fixed-bottom navbar-dark bg-dark">
        <p class="navbar-brand ms-3">&copy; @DateTime.Now.Year - TraceRoute - <a class="link-secondary" href="https://github.com/mdima/traceroute" target="_blank"><i class="fa-brands fa-github"></i> GitHub</a></p>
    </footer>
    <script src="~/lib/jquery/jquery.min.js" asp-append-version="true"></script>
    <script src="~/lib/twitter-bootstrap/js/bootstrap.min.js"></script>
    <script src="~/lib/angular.js/angular.min.js"></script>
    <script src="~/js/app.js"></script>
    <script src="~/js/traceRouteController.js"></script>
    <script src="~/js/site.min.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>